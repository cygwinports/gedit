inherit gnome2

DESCRIPTION="GNOME text editor"

PATCH_URI="2.28.0-cygwin-x11.patch"

PKG_NAMES="${PN} ${PN}-devel"
PKG_HINTS="setup devel"
gedit_CONTENTS="--exclude=gtk-doc etc/ usr/bin/ usr/lib/gedit-2/ usr/share/"
gedit_devel_CONTENTS="usr/include/ usr/lib/lib* usr/lib/pkgconfig/ usr/share/gtk-doc/"

DIFF_EXCLUDES="*.desktop.in"

CYGCONF_ARGS="--libexecdir=/usr/lib --enable-python --disable-attr"
